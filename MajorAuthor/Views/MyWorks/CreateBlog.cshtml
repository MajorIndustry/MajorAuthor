@model MajorAuthor.Models.CreateBlogModel
@{
    // Устанавливаем заголовок страницы
    ViewData["Title"] = "Создать блог";
}

<!-- Основной контейнер страницы, использующий классы Tailwind для адаптивного макета -->
<div class="container mx-auto p-4 md:p-8 flex flex-col items-center">
    <!-- Заголовок формы -->
    <h1 class="text-3xl md:text-4xl font-bold section-title mb-6 text-center">Создать новый блог</h1>

    <!-- Форма для отправки данных блога на POST-метод контроллера.
         Важно: добавлен атрибут "enctype" для обработки загрузки файлов. -->
    <form asp-action="CreateBlog" method="post" enctype="multipart/form-data" class="w-full max-w-2xl bg-white dark:bg-gray-800 p-6 md:p-8 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
        <!-- Поле для заголовка -->
        <div class="mb-4">
            <label asp-for="Title" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
            <input asp-for="Title" class="form-control w-full p-2 border rounded-md focus:ring-2 focus:ring-accent-gold" />
            <span asp-validation-for="Title" class="text-red-500 text-sm mt-1"></span>
        </div>

        <!-- Поле для загрузки фотографии -->
        <div class="mb-4">
            <label asp-for="Photo" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                Изображение для блога (опционально)
            </label>
            <input asp-for="Photo" type="file" class="form-control w-full p-2 border rounded-md file:mr-4 file:py-2 file:px-4
                file:rounded-full file:border-0
                file:text-sm file:font-semibold
                file:bg-accent-gold file:text-white
                hover:file:bg-accent-light" />
            <span asp-validation-for="Photo" class="text-red-500 text-sm mt-1"></span>
        </div>

        <!-- Поле для содержимого блога -->
        <div class="mb-4">
            <label asp-for="Content" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
            <textarea asp-for="Content" rows="15" class="form-control w-full p-2 border rounded-md focus:ring-2 focus:ring-accent-gold"></textarea>
            <span asp-validation-for="Content" class="text-red-500 text-sm mt-1"></span>
        </div>

        <!-- Кнопка отправки формы -->
        <div class="flex items-center justify-between">
            <button type="submit" class="w-full btn-primary py-3 rounded-lg text-lg font-semibold tracking-wide">
                Опубликовать блог
            </button>
        </div>

        <!-- Ссылки для возврата -->
        <div class="mt-4 text-center">
            <a asp-action="Index" class="text-accent-gold hover:underline">Вернуться к списку произведений</a>
        </div>
    </form>
</div>
