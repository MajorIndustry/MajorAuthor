@model MajorAuthor.Models.ResetPasswordViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Сброс пароля";
}

<h1 class="text-4xl font-bold text-center mb-10 section-title">@ViewData["Title"]</h1>

<div class="max-w-md mx-auto p-6 rounded-lg border shadow-xl card">
    <p class="text-lg text-themed-label mb-4 text-center">
        Введите ваш Email, новый пароль и подтвердите его.
    </p>

    <form method="post">
        <div asp-validation-summary="All" class="text-red-600 font-bold mb-4" role="alert"></div>

        @if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
        {
            <div class="alert @((string)ViewBag.StatusMessageType == "success" ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700") p-3 rounded-md mb-4" role="alert">
                @ViewBag.StatusMessage
            </div>
        }

        {{-- Скрытые поля для Code и Email --}}
        <input type="hidden" asp-for="Code" />
        <input type="hidden" asp-for="Email" />

        <div class="mb-4">
            <label asp-for="Email" class="block text-sm font-medium text-themed-label"></label>
            <input asp-for="Email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-gold focus:ring-accent-gold dark:bg-gray-700 dark:text-gray-100" autocomplete="email" aria-required="true" readonly /> {{-- Сделали поле только для чтения --}}
            <span asp-validation-for="Email" class="text-red-600 text-xs mt-1"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Password" class="block text-sm font-medium text-themed-label"></label>
            <input asp-for="Password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-gold focus:ring-accent-gold dark:bg-gray-700 dark:text-gray-100" autocomplete="new-password" aria-required="true" placeholder="Новый пароль" />
            <span asp-validation-for="Password" class="text-red-600 text-xs mt-1"></span>
        </div>
        <div class="mb-4">
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-themed-label"></label>
            <input asp-for="ConfirmPassword" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-gold focus:ring-accent-gold dark:bg-gray-700 dark:text-gray-100" autocomplete="new-password" aria-required="true" placeholder="Подтвердите новый пароль" />
            <span asp-validation-for="ConfirmPassword" class="text-red-600 text-xs mt-1"></span>
        </div>
        <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-accent-gold hover:bg-accent-light focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-gold transition-colors">
            Сбросить пароль
        </button>
    </form>
    <div class="mt-4 text-center">
        <p class="text-sm text-themed-label">
            <a asp-controller="Account" asp-action="Login" class="text-accent-gold hover:underline">Вернуться к входу</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
