@model MajorAuthor.Models.ExternalLoginConfirmationViewModel
@{
    // Указываем, что это представление использует _Layout.cshtml
    Layout = "_Layout";
    ViewData["Title"] = "Подтверждение внешнего входа";
    // Получаем информацию из ViewData, переданную контроллером
    var returnUrl = ViewData["ReturnUrl"] as string;
    var loginProvider = ViewData["LoginProvider"] as string;
}

<h1 class="text-4xl font-bold text-center mb-10 section-title">@ViewData["Title"]</h1>
<h2 class="text-2xl font-semibold mb-4 text-center">Свяжите ваш @loginProvider аккаунт.</h2>

<div class="max-w-md mx-auto p-6 rounded-lg border shadow-xl card">
    <p class="mb-4 text-themed-label">
        Вы успешно аутентифицировались с помощью <strong>@loginProvider</strong>.
        Пожалуйста, введите адрес электронной почты для этого сайта и нажмите кнопку "Зарегистрироваться", чтобы завершить регистрацию.
    </p>
    <form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnUrl="@returnUrl" method="post">
        <div asp-validation-summary="All" class="text-red-600 font-bold mb-4"></div>
        <div class="mb-4">
            <label asp-for="Email" class="block text-sm font-medium text-themed-label"></label>
            <input asp-for="Email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-gold focus:ring-accent-gold dark:bg-gray-700 dark:text-gray-100" />
            <span asp-validation-for="Email" class="text-red-600 text-xs mt-1"></span>
        </div>
        <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-accent-gold hover:bg-accent-light focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-gold transition-colors">Зарегистрироваться</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
